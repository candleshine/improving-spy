/* Main screen styling */
Screen {
    background: rgb(0, 0, 0);
    color: rgb(0, 255, 0);
}

/* Hide elements with hidden class */
.hidden {
    display: none;
}

/* Section title styling */
.section-title {
    background: rgb(0, 51, 0);
    color: rgb(0, 255, 0);
    padding: 1;
    text-align: center;
    width: 100%;
}

/* Spy name styling */
.spy-name {
    background: rgb(0, 51, 0);
    color: rgb(0, 255, 0);
    width: 100%;
    text-align: left;
    padding: 0 1;
}

.spy-name.selected {
    background: rgb(0, 170, 0);
    color: rgb(0, 0, 0);
    text-style: bold;
}

/* Spy selector */
#spy-selector {
    height: 100vh;
    margin: 1 0;
    border: solid rgb(0, 128, 0);
    width: 100%;
    display: block;
}

/* Spy selector container */
.spy-selector-container {
    height: 100%;
    width: 100%;
    display: block;
    layout: vertical;
}

/* Spy selector wrapper */
.spy-selector-wrapper {
    height: 90vh;
    width: 100%;
    display: block;
}

/* Spy list container */
#spy-list-container {
    height: 80vh;
    width: 100%;
    overflow-y: auto;
    border: solid rgb(0, 128, 0);
    margin: 1 0;
}

/* Spy list */
#spy-list {
    width: 100%;
    height: auto;
    min-height: 10;
    max-height: 100%;
    background: rgb(0, 20, 0);
    border: solid rgb(0, 255, 0);
    padding: 1;
    margin: 1 0;
    overflow-y: auto;
}


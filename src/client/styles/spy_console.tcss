/* Spy name */
.spy-name {
    width: 1fr;
    color: rgb(0, 255, 0);  /* Ensure spy names are visible */
    text-style: bold;
    background: rgb(0, 30, 0);
    padding: 0 1;
}

/* Spy ID - removed duplicate definition */

/* Spy list container - removed duplicate definition */

/* Spy list */
.spy-list {
    height: 70vh;  /* Set a fixed height with viewport units */
    overflow-y: auto;  /* Enable vertical scrolling */
    border: solid rgb(0, 68, 0);
    width: 100%;
    padding: 1;
    display: block;
}

/* Spy item container */
.spy-item {
    width: 100%;
    layout: horizontal;
    align: center middle;
    padding: 1;
    border-bottom: solid rgb(0, 34, 0);
    color: rgb(0, 255, 0);  /* Ensure text is visible with green color */
}

/* Hover state */
.spy-item:hover {
    background: rgb(0, 34, 0);
}

/* Selected state */
.spy-item.selected {
    background: rgb(0, 80, 0);
    color: rgb(255, 255, 255);
    border: solid rgb(0, 255, 0);
    text-style: bold;
}

/* Selected and hovered state */
.spy-item.selected:hover {
    background: rgb(0, 85, 0);
}

/* Spy ID label */
.spy-id {
    color: rgb(0, 200, 0);  /* Brighter green for better visibility */
    text-style: italic;
    margin-left: 1;
    opacity: 0.9;  /* Increased opacity for better visibility */
}

/* Spy avatar */
.spy-avatar {
    background: rgb(0, 51, 0);
    color: rgb(255, 255, 255);
    min-width: 4;
    text-align: center;
    margin-right: 1;
    border: solid rgb(0, 100, 0);
    padding: 0 1;
}

/* Chat window */
#chat-window {
    height: 1fr;
    border: solid green;
    margin: 1 0;
    padding: 0 1;
    overflow-y: auto;
}

/* Hide chat until spy is selected */
#chat-window.pre-selection,
#input-bar.pre-selection,
.pre-selection #message-input,
.pre-selection #send-button {
    display: none !important;
}

/* Input bar */
#input-bar {
    height: auto;
    border: solid green;
    padding: 1;
}

/* Message styling */
.message {
    margin: 1 0;
    padding: 0 1;
}

.message.user {
    text-align: right;
    color: #00ff00;
}

.message.assistant {
    text-align: left;
    color: #00aaff;
}

/* Status bar */
.status-bar {
    background: #003300;
    color: #00ff00;
    height: 1;
    padding: 0 1;
}
